{
  "name": "lightning-invoice",
  "version": "0.2.1",
  "description": "Lightning Network invoice protocol library",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --testEnvironment=node --coverage",
    "format": "prettier --write src/*.js",
    "lint": "eslint src/*.js",
