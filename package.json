  "author": "Brian Mancini <bmancini@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/altangent/lightning-payment/issues"
  },
  "homepage": "https://github.com/altangent/lightning-payment#readme",
  "dependencies": {
    "bech32": "^1.1.3",
    "bs58check": "^2.1.1",
    "decimal.js": "^10.0.1",
    "secp256k1": "^3.5.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "jest": "^22.4.4",
    "prettier": "^1.13.4"
